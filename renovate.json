{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "dependencyDashboard": false,
  "schedule": [
    "every weekend"
  ],
  "prConcurrentLimit": 1,
  "prHourlyLimit": 1,
  "commitMessagePrefix": "chore(deps):",
  "commitMessageAction": "update",
  "semanticCommits": "enabled",
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security"]
  },
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": [
      "every weekend"
    ]
  },
  "packageRules": [
    {
      "description": "Security patch fixes - auto-merge immediately",
      "matchUpdateTypes": ["patch"],
      "matchDatasources": ["git-tags", "github-tags", "github-releases"],
      "vulnerabilitySeverity": ["LOW", "MODERATE", "HIGH", "CRITICAL"],
      "groupName": "Security patches",
      "schedule": ["at any time"],
      "prPriority": 10,
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "squash",
      "platformAutomerge": true,
      "ignoreTests": false,
      "labels": ["security", "auto-merged"]
    },
    {
      "description": "Security breaking changes - immediate PR but manual review",
      "matchUpdateTypes": ["minor", "major"],
      "matchDatasources": ["git-tags", "github-tags", "github-releases"],
      "vulnerabilitySeverity": ["LOW", "MODERATE", "HIGH", "CRITICAL"],
      "groupName": "Security updates (review needed)",
      "schedule": ["at any time"],
      "prPriority": 9,
      "automerge": false,
      "labels": ["security", "urgent", "requires-review"]
    },
    {
      "description": "Regular Nix flake inputs - weekly grouped auto-merge",
      "matchDatasources": ["git-tags", "github-tags"],
      "matchManagers": ["custom.regex"],
      "groupName": "Nix flake inputs",
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "squash",
      "platformAutomerge": true,
      "ignoreTests": false
    },
    {
      "description": "GitHub Actions - weekly grouped auto-merge",
      "matchManagers": ["github-actions"],
      "groupName": "GitHub Actions",
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "squash",
      "platformAutomerge": true
    },
    {
      "description": "Major version updates - require manual review",
      "matchUpdateTypes": ["major"],
      "automerge": false,
      "labels": ["major-update"]
    }
  ],
  "nix": {
    "enabled": true
  }
}
